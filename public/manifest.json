{
  "name": "Test Extension",
  "description": "Chrome Extension for making it snow in your browser!",
  "manifest_version": 3,
  "version": "1.0.0",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.min.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.acmicpc.net/problem/*",
        "https://www.acmicpc.net/status*",
        "https://www.acmicpc.net/submit/*",
        "https://www.acmicpc.net/short/*"
      ],
      "js": ["content.min.js"]
    }
  ]
}
